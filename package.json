{
  "name": "typing-math-game",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --port=3000 --host=0.0.0.0",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist dist-electron",
    "lint": "tsc --noEmit",
    "electron:dev": "tsc electron/main.ts electron/preload.ts --outDir dist-electron --module esnext --target esnext --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports && concurrently \"npm run dev\" \"wait-on http://localhost:3000 || wait-on http://localhost:3001 && electron .\"",
    "electron:build": "npm run build && tsc electron/main.ts electron/preload.ts --outDir dist-electron --module esnext --target esnext --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.29.0",
    "@tailwindcss/vite": "^4.1.14",
    "@vitejs/plugin-react": "^5.0.4",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "lucide-react": "^0.546.0",
    "motion": "^12.23.24",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.chheng.numbercollecting",
    "productName": "Typing Math Game",
    "icon": "public/typing-math-game-logo.png",
    "directories": {
      "output": "dist-electron-build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.14.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.21.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.4"
  }
}